{
    "compilerOptions": {
        "target": "es5",
        "noUnusedLocals": true,
        "allowJs": false,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "strict": true,
        "sourceMap": true,
        "inlineSources": true,
        "module": "es2015",
        "outDir": "./build/",
        "lib": ["es2019", "dom"],
        "baseUrl": ".",
        "moduleResolution": "node",
        "paths": {
            "spotfire-api": ["./spotfire/spotfire-api-1-3"],
        },
        "typeRoots": ["./spotfire", "./node_modules/@types"]
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts", "./spotfire/**/*.d.ts"],
    "exclude": ["../node_modules"]
}